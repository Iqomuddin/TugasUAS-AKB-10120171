<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#097BDF</item>
        <item name="colorPrimaryVariant">#78F4F8</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#0343AE</item>
        <item name="colorSecondaryVariant">#BF544C</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/holo_blue_dark</item>
    </style>

<!--    Light Mode-->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

<!--    Text light mode-->
    <style name="TEXT">
        <item name="android:background">#000</item>
    </style>

    <style name="Theme.Toolbar.ToolBarActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#036FCD</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/holo_blue_dark</item>
    </style>




</resources>